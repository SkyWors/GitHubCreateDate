{
	"manifest_version": 3,
	"name": "GitHubCreateDate",

	"action": {
		"default_title": "GitHubCreateDate"
	},

	"version": "1.0.0",

	"description": "Display github repositories creation date",

	"permissions": [
		"tabs",
		"activeTab",
		"scripting"
	],

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["background.js"]
		}
	],

	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png",
		"512": "icons/icon512.png"
	}
}
